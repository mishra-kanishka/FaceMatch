<%- model_class = Profile -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>      
      <th><%= model_class.human_attribute_name(:name) %></th>
      <!-- <th><%= model_class.human_attribute_name(:age) %></th> -->
      <th><%= model_class.human_attribute_name(:about_me) %></th>
      <!-- <th><%= model_class.human_attribute_name(:image) %></th> -->
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @profiles.each do |profile| %>
      <tr>       
        <td><%= link_to profile.name, profile_path(profile)  %></td>
        <!-- <td><%= profile.age %></td> -->
        <td><%= profile.about_me %></td>
        <% if can? :update, @profile %>  
        <td><%= image_tag profile.image_url(:small) if profile.image? %></td>      
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_profile_path(profile), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      profile_path(profile),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
      <% end%>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_profile_path,
            :class => 'btn btn-primary' %>
